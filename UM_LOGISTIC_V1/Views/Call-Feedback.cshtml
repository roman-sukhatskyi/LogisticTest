<div align="center" ng-show="isLoading">
    <img src="~/Resources/Picture/loading.gif" align="center"/>
</div>
<div class="row" ng-show="!isLoading">
    <h4></h4>
</div>
<div class="row" style="margin-top: 100px;" ng-show="!isLoading">
    <h4 align="center">Зворотній зв'язок</h4>
    <form class="bs-component" name="createForm">
        <div class="row">
            <div class="form-group required col-md-6 col-md-offset-3">
                <label class="control-label">Ваше ім'я:</label>
                <input class="form-control input-sm" ng-model="feedback.Name" name="name" type="text" required>
            </div>
        </div>
        <div class="row">
            <div class="form-group required col-md-6  col-md-offset-3">
                <label class="control-label">Ваш телефон:</label>
                <input class="form-control input-sm" name="phone" id="contactPhone" ng-model="feedback.Phone" type="text" required>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6  col-md-offset-3">
                <label class="control-label">Ваше запитання:</label>
                <textarea class="form-control" style="resize:vertical;" rows="5" name="question" ng-model="feedback.Question"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-md-offset-3">
                    <button type="submit" class="btn btn-primary btn-sm" ng-click="createCallFeedback()">Зберегти</button>
            </div>
        </div>
    </form>
</div>
